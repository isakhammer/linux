# General commands
docker ps -a            # list containers
docker rm <containerid> # remove container permanently

# Check if VM is active
dockermachine active

# Ubuntu 16 image
docker image pull ubuntu:16.04

# run new containers
docker run -i -t -v ~/catkin-build:/root/ros/catkin_ws/src --name build0 ros:kinetic-ros-core /bin/bash

docker run -it <imageid> bash
docker run -it <imageid> <command>

# start old container interactively
docker start -i <name>


# Commit image of docker container 
docker commit <containerid> <name>
